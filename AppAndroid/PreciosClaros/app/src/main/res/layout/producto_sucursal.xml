<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/productoSucursal"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/distancia"
        android:text="0.30 kilometros"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@id/distancia"
        android:id="@+id/imgComercio"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_marginTop="15dp"
        android:textColor="@color/md_black_1000"
        android:textStyle="bold"
        android:layout_below="@id/distancia"
        android:layout_toRightOf="@id/imgComercio"
        android:text="Hipermercado Carrefour"
        android:id="@+id/nombreComercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Martin rodriguez 1520"
        android:layout_toRightOf="@id/imgComercio"
        android:layout_below="@id/nombreComercio"
        android:id="@+id/direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Ituzaingo"
        android:layout_below="@id/direccion"
        android:layout_toRightOf="@id/imgComercio"
        android:id="@+id/localidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="$100"
        android:layout_below="@id/localidad"
        android:layout_toRightOf="@id/imgComercio"
        android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/agregarboton"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        android:maxWidth="70dp"
        android:layout_below="@id/localidad"
        android:id="@+id/agregar"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>